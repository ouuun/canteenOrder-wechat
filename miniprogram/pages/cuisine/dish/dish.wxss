}
.delete {
    position:absolute;
    height: 40rpx;
    width: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    top:0;
    right: 0;
    background-color: rgba(63,69,71);
    border-radius: 0 0 0 25rpx;
}