/* 图片 */
.imgs {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: space-around;
}

.img {
    margin: 1rpx 6rpx;
    position: relative;
}

.img image {
    width: 150rpx;
    height: 150rpx;
    object-fit: cover;
}

.input.img {
    background: #F5F5F5;
    display: flex;
    width: 150rpx;
    height: 150rpx;
    justify-content: center;
    align-items: center;
    border: 1rpx solid 	#A9A9A9;
}
.delete image{
    height: 20rpx;
    width: 20rpx;
    /* position: relative;
    left: 15rpx;
