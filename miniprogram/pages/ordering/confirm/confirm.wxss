page {
    background: rgba(116, 120, 122, 0.161);
    display: flex; 
    flex-direction: column;
    height: 100%;
}

/* 订单 */
.cart {
    display: flex;
    flex-direction: column;
    /* background-color: white; */
    /* border: red 1rpx solid; */
    padding: 40rpx;
    padding-bottom: 0rpx;
    /*border-radius: 25rpx; */
}

.cart .item {
    display: flex;
    flex-direction: row;
    /* justify-content: space-between; */
    background-color: white;
    border-radius: 25rpx;
    margin-bottom: 20rpx;
    padding: 25rpx;
}

.cart .item .left image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 25rpx;
}

.cart .item .middle {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    margin-left: 30rpx;
}

.cart .item .middle .name {
    font-size: 32rpx;
    font-weight: bolder;
}

.cart .item .middle .select {
    font-size: 26rpx;
    color: rgb(153, 153, 153);
    position: relative;
    top: -10rpx;
}

.cart .item .middle .num {
    font-size: 26rpx;
    color: rgb(153, 153, 153);
    position: relative;
    top: -5rpx;
}

.cart .item .right {
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    color: rgb(255, 75, 52);
}

/* 备注 */
.remark {
    padding: 0 40rpx;
    margin: 25rpx 0;
}

/* 底栏 */
.all{
    display: flex;
    flex-grow:1;
    align-items: center;
    justify-content: center;
}
.buttom {
    display: flex;
    flex-direction: row;
    background-color: white;
    /* height: 100%; */
    justify-content: flex-end;
    padding:0  30rpx;
    flex-grow:1;
    height: 100%;
}

.buttom .left {
    font-size: 40rpx;
    color: rgb(254,81,39);
    display: flex;
    align-items: center;
}

.buttom .left span{
    font-size: 30rpx;
}

.buttom .left .sum{
    color: black;
}

.buttom .right {
    margin: 10rpx;
    display: flex;
    align-items: center;
}

.buttom .right button{
   background-color: rgb(0,181,252);
   border-color: rgb(0,181,252);
}